    "list.inactiveSelectionBackground": "#1e293b",
    "list.inactiveSelectionForeground": "#94a3b8",
    "list.highlightForeground": "#3b82f6",
    "list.errorForeground": "#f87171",
    "list.warningForeground": "#fbbf24",

    /* ===== 树 ===== */
    "tree.indentGuidesStroke": "#2d3748",

    /* ===== 快速选择器 ===== */
    "quickInput.background": "#1e293b",
    "quickInput.foreground": "#e2e8f0",
    "quickInputTitle.background": "#0f172a",
    "pickerGroup.border": "#2d3748",
    "pickerGroup.foreground": "#94a3b8",

    /* ===== 编辑器细节 ===== */
    "editorLineNumber.foreground": "#94a3b8",
    "editorLineNumber.activeForeground": "#e2e8f0",
    "editorCursor.foreground": "#3b82f6",
    "editor.selectionBackground": "#3b82f640",
    "editor.selectionHighlightBackground": "#3b82f220",
    "editor.findMatchBackground": "#3b82f660",
    "editor.findMatchHighlightBackground": "#3b82f230",
    "editor.wordHighlightBackground": "#3b82f230",
    "editor.wordHighlightStrongBackground": "#3b82f250",
    "editorWhitespace.foreground": "#2d3748",
    "editorIndentGuide.background1": "#2d3748",
    "editorIndentGuide.activeBackground1": "#3b82f6",
    "editorRuler.foreground": "#2d3748",
    "editorCodeLens.foreground": "#94a3b8",
    "editorBracketMatch.background": "#3b82f230",
    "editorBracketMatch.border": "#3b82f6",
    "editorOverviewRuler.border": "#2d3748",
    "editorOverviewRuler.modifiedForeground": "#fbbf24",
    "editorOverviewRuler.addedForeground": "#34d399",
    "editorOverviewRuler.deletedForeground": "#f87171",
    "editorError.foreground": "#f87171",
    "editorWarning.foreground": "#fbbf24",
    "editorInfo.foreground": "#3b82f6",
    "editorHint.foreground": "#94a3b8",
    "editorGutter.modifiedBackground": "#fbbf24",
    "editorGutter.addedBackground": "#34d399",
    "editorGutter.deletedBackground": "#f87171",

    /* ===== 差异编辑器 ===== */
    "diffEditor.insertedTextBackground": "#34d39920",
    "diffEditor.removedTextBackground": "#f8717120",
    "diffEditor.border": "#2d3748",

    /* ===== 面包屑 ===== */
    "breadcrumb.background": "#0f172a",
    "breadcrumb.foreground": "#94a3b8",
    "breadcrumb.focusForeground": "#e2e8f0",
    "breadcrumbPicker.background": "#1e293b",

    /* ===== 编辑器小部件 ===== */
    "editorWidget.background": "#1e293b",
    "editorWidget.foreground": "#e2e8f0",
    "editorWidget.border": "#2d3748",
    "editorSuggestWidget.background": "#1e293b",
    "editorSuggestWidget.border": "#2d3748",
    "editorSuggestWidget.foreground": "#e2e8f0",
    "editorSuggestWidget.highlightForeground": "#3b82f6",
    "editorSuggestWidget.selectedBackground": "#1e3a8a",
    "editorHoverWidget.background": "#1e293b",
    "editorHoverWidget.foreground": "#e2e8f0",
    "editorHoverWidget.border": "#2d3748",

    /* ===== 调试 ===== */
    "debugToolBar.background": "#1e293b",
    "debugToolBar.border": "#2d3748",
    "debugIcon.startForeground": "#34d399",
    "debugIcon.pauseForeground": "#fbbf24",
    "debugIcon.stopForeground": "#f87171",
    "debugIcon.disconnectForeground": "#f87171",
    "debugIcon.continueForeground": "#34d399",
    "debugIcon.breakpointForeground": "#f87171",
    "debugIcon.breakpointDisabledForeground": "#94a3b8",

    /* ===== Git 装饰 ===== */
    "gitDecoration.addedResourceForeground": "#34d399",
    "gitDecoration.modifiedResourceForeground": "#fbbf24",
    "gitDecoration.deletedResourceForeground": "#f87171",
    "gitDecoration.untrackedResourceForeground": "#94a3b8",
    "gitDecoration.ignoredResourceForeground": "#2d3748",
    "gitDecoration.conflictingResourceForeground": "#fbbf24",

    /* ===== 终端 ===== */
    "terminal.background": "#0f172a",
    "terminal.foreground": "#e2e8f0",
    "terminal.border": "#2d3748",
    "terminal.selectionBackground": "#3b82f640",
    "terminalCursor.foreground": "#3b82f6",
    "terminal.ansiBlack": "#1e293b",
    "terminal.ansiRed": "#f87171",
    "terminal.ansiGreen": "#34d399",
    "terminal.ansiYellow": "#fbbf24",
    "terminal.ansiBlue": "#3b82f6",
    "terminal.ansiMagenta": "#c084fc",
    "terminal.ansiCyan": "#22d3ee",
    "terminal.ansiWhite": "#e2e8f0",

    /* ===== 通知 ===== */
    "notifications.background": "#1e293b",
    "notifications.foreground": "#e2e8f0",
    "notifications.border": "#2d3748",

    /* ===== 扩展 ===== */
    "extensionButton.prominentBackground": "#3b82f6",
    "extensionButton.prominentForeground": "#ffffff",
    "extensionButton.prominentHoverBackground": "#2563eb",

    /* ===== 进度条 ===== */
    "progressBar.background": "#3b82f6"
  },
  "tokenColors": [
    // === 基础 ===
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#94a3b8"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "variable.parameter"],
      "settings": {
        "foreground": "#e2e8f0"
      }
    },
    {
      "name": "Keyword - 主蓝加粗",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#3b82f6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Operator - 视觉退后",
      "scope": ["keyword.operator", "punctuation", "meta.brace"],
      "settings": {
        "foreground": "#64748b"
      }
    },
    {
      "name": "Function - 发光感",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function"
      ],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    // 新增：函数参数斜体
    {
      "name": "Function Parameters - 斜体",
      "scope": ["variable.parameter"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "Number, Constant - 月光黄",
      "scope": ["constant.numeric", "constant.language", "support.constant"],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    {
      "name": "String - 月灵花绿",
      "scope": [
        "string",
        "string.quoted.single",
        "string.quoted.double",
        "text.html.vue string"
      ],
      "settings": {
        "foreground": "#34d399"
      }
    },
    // 新增：字符串内插值（模板字符串中的 ${}）
    {
      "name": "String Interpolation - 发光蓝",
      "scope": [
        "meta.embedded",
        "source.js.embedded",
        "string.template meta.template.expression"
      ],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "Class, Type - 暖色点缀",
      "scope": ["entity.name.type", "support.type", "support.class"],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    {
      "name": "Tag - 错误红",
      "scope": [
        "entity.name.tag",
        "meta.tag.sgml",
        "text.html.vue entity.name.tag",
        "meta.tag.vue"
      ],
      "settings": {
        "foreground": "#f87171"
      }
    },
    {
      "name": "Attributes - 主蓝",
      "scope": [
        "entity.other.attribute-name",
        "text.html.vue entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#3b82f6"
      }
    },
    {
      "name": "Regular Expressions - 青色点缀",
      "scope": ["string.regexp"],
      "settings": {
        "foreground": "#22d3ee"
      }
    },
    {
      "name": "URL - 下划线",
      "scope": ["*url*", "*link*", "*uri*"],
      "settings": {
        "fontStyle": "underline"
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#f87171"
      }
    },
    {
      "name": "Inserted",
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#34d399"
      }
    },
    {
      "name": "Deleted",
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#f87171"
      }
    },
    {
      "name": "Changed",
      "scope": ["markup.changed"],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    // 新增：TODO / FIXME 高亮
    {
      "name": "TODO Highlight",
      "scope": ["comment.line.todo", "comment.block.todo"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#fbbf24"
      }
    },

    // === HTML / Vue 模板 ===
    {
      "name": "HTML Doctype",
      "scope": ["meta.tag.sgml.html", "entity.name.tag.doctype.html"],
      "settings": {
        "foreground": "#64748b"
      }
    },
    {
      "name": "HTML Attribute Value",
      "scope": ["string.quoted.double.html", "string.quoted.single.html"],
      "settings": {
        "foreground": "#34d399"
      }
    },
    {
      "name": "HTML/Vue Text Content",
      "scope": [
        "text.html.basic",
        "text.html.vue text",
        "text.html.derivative"
      ],
      "settings": {
        "foreground": "#cbd5e1"
      }
    },
    {
      "name": "HTML Comment",
      "scope": ["comment.block.html", "comment.html"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#94a3b8"
      }
    },
    {
      "name": "HTML Script Tag Content",
      "scope": ["source.js.embedded.html"],
      "settings": {
        "foreground": "#e2e8f0"
      }
    },
    {
      "name": "HTML Style Tag Content",
      "scope": ["source.css.embedded.html"],
      "settings": {
        "foreground": "#e2e8f0"
      }
    },
    {
      "name": "Vue Directives",
      "scope": [
        "entity.other.attribute-name.html.vue",
        "meta.directive.vue",
        "punctuation.definition.directive.vue"
      ],
      "settings": {
        "foreground": "#c084fc",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Vue Interpolation",
      "scope": [
        "expression.embbeded.vue",
        "punctuation.definition.expression.vue"
      ],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "Vue Composition API",
      "scope": ["support.function.vue", "meta.function-call.vue"],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "Vue Lifecycle Hooks",
      "scope": ["support.function.vue.lifecycle"],
      "settings": {
        "foreground": "#c084fc",
        "fontStyle": "italic"
      }
    },

    // === CSS ===
    {
      "name": "CSS Properties",
      "scope": ["support.type.property-name.css", "meta.property-name.css"],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "CSS Units",
      "scope": [
        "keyword.other.unit.css",
        "keyword.other.unit.rem.css",
        "keyword.other.unit.px.css",
        "keyword.other.unit.em.css",
        "keyword.other.unit.percent.css"
      ],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    {
      "name": "CSS Variable Definitions",
      "scope": [
        "meta.property-list.css variable",
        "source.css variable",
        "variable.css"
      ],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "CSS Variable Usage",
      "scope": [
        "meta.function.css variable",
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "CSS Selectors",
      "scope": [
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css",
        "entity.name.tag.css"
      ],
      "settings": {
        "foreground": "#3b82f6"
      }
    },
    {
      "name": "CSS Pseudo",
      "scope": [
        "entity.other.attribute-name.pseudo-class.css",
        "entity.other.attribute-name.pseudo-element.css"
      ],
      "settings": {
        "foreground": "#7dd3fc",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS At-rules",
      "scope": ["keyword.control.at-rule.css", "meta.at-rule.css keyword"],
      "settings": {
        "foreground": "#3b82f6",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS Numbers",
      "scope": ["constant.numeric.css"],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    // 注意：移除了强制给颜色值着色的规则，颜色值将显示自身颜色

    // === Markdown ===
    {
      "name": "Markdown Heading",
      "scope": ["markdown.heading", "markup.heading"],
      "settings": {
        "foreground": "#34d399",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown Link",
      "scope": ["string.other.link.title.markdown"],
      "settings": {
        "foreground": "#7dd3fc"
      }
    },
    {
      "name": "Markup Italic",
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#cbd5e1"
      }
    },
    {
      "name": "Markup Bold",
      "scope": ["markup.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#e2e8f0"
      }
    },
    {
      "name": "Markdown - Raw Block",
      "scope": ["markup.raw.block"],
      "settings": {
        "foreground": "#3b82f6"
      }
    },
    {
      "name": "Markdown - Fenced Language",
      "scope": ["variable.language.fenced.markdown"],
      "settings": {
        "foreground": "#94a3b8"
      }
    },

    // === JSON ===
    {
      "name": "JSON Key - Level 0",
      "scope": [
        "source.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#3b82f6"
      }
    },
    {
      "name": "JSON Key - Level 1",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#fbbf24"
      }
    },
    {
      "name": "JSON Key - Level 2",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#f87171"
      }
    }
  ]
}
